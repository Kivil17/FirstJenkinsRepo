pipeline {
    
    parameters {
        string(name: 'folderName', defaultValue: '', description: 'folder name to create or access to it')
        booleanParam(name: 'createFolder', defaultValue: false, description: 'true if the folder is not created yet')
        file(name:'file', description:'file to put on folder')
    }

    agent  any

    stages {
        stage('Plan') {
            steps{
                script {
                    if (createFolder) {
                        echo 'create folder: ${folderName}'
                        sh 'pwd;mkdir ${folderName}'
                    }
                    echo 'create file into folder: ${folderName}'
                    sh 'pwd;cd ${folderName}'
                    sh 'pwd;copy ${file}'
                }
            }
        }
    }
}
